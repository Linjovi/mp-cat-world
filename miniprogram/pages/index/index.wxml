<view class="container" style="padding-top: {{paddingTop}}px">
  <view class="header">
    <view class="title">欢迎来到</view>
    <view class="subtitle">呼噜呼噜事务所</view>
    <image class="header-illustration" src="https://pic1.imgdb.cn/item/6938113900233646958db1ac.png" mode="aspectFit" />
  </view>

  <view class="app-list">
    <block wx:for="{{appList}}" wx:key="id">
      <view class="app-card {{item.className}}" bindtap="onAppSelect" data-url="{{item.url}}">
         <view class="card-icon-container">
            <image class="card-icon" src="{{item.icon}}" mode="aspectFill" />
         </view>
         <view class="card-content">
            <view class="card-text">
               <view class="app-name">{{item.name}}</view>
               <view class="app-desc">{{item.desc}}</view>
               <view class="tags">
                  <view wx:for="{{item.tags}}" wx:for-item="tag" wx:key="text" class="tag {{tag.color}}">{{tag.text}}</view>
               </view>
            </view>
            <view class="arrow-btn">
              <text class="arrow-icon">></text>
            </view>
         </view>
         <image class="card-illustration" src="{{item.illustration}}" mode="aspectFill" />
      </view>
    </block>

    <!-- More Placeholder -->
    <view class="more-card">
       <text>🏗️ 更多应用建设中...</text>
    </view>
  </view>
</view>
