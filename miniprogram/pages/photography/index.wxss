page {
  background-color: #f9fafb;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.error-toast {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #ef4444;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 100rpx;
  font-size: 26rpx;
  font-weight: 700;
  z-index: 200;
  box-shadow: 0 10rpx 20rpx rgba(239, 68, 68, 0.3);
}

/* Image Display */
.image-display {
  width: 100%;
  background-color: #f3f4f6;
  position: relative;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-display.partial {
  height: 35vh;
  flex-shrink: 0;
}

.image-display.full {
  flex: 1;
  background-color: #000;
}

.main-img {
  width: 100%;
  height: 100%;
}

.main-img.original {
  padding: 40rpx;
  box-sizing: border-box;
}

.compare-btn {
  position: absolute;
  bottom: 40rpx;
  background-color: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
  padding: 16rpx 40rpx;
  border-radius: 100rpx;
  border: 1px solid rgba(255,255,255,0.2);
  backdrop-filter: blur(4px);
  z-index: 10;
}

.clear-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0,0,0,0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  z-index: 10;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #4b5563;
}

.camera-icon-circle {
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.empty-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* Loading Overlay */
.loading-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(255,255,255,0.9);
  backdrop-filter: blur(4px);
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
}

.cat-bounce {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: bounce 1s infinite;
}

.status-msg {
  font-size: 36rpx;
  font-weight: 900;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.sub-msg {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  border-radius: 100rpx;
  overflow: hidden;
}

.progress-text {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 10rpx;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* Control Panel */
.control-panel {
  flex: 1;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin-top: -40rpx;
  z-index: 20;
  box-shadow: 0 -8rpx 30rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.panel-content {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx;
  padding-bottom: 120rpx;
}

.tab-switch {
  display: flex;
  background-color: #f3f4f6;
  padding: 8rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.tab-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  font-weight: 900;
  color: #6b7280;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.tab-btn.active {
  background-color: #fff;
  color: #111827;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.presets-area {
  margin-bottom: 40rpx;
}

.loading-styles {
  text-align: center;
  color: #9ca3af;
  font-size: 24rpx;
  padding: 40rpx;
}

.styles-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.style-chip {
  padding: 16rpx 30rpx;
  background-color: #f9fafb;
  border: 2rpx solid transparent;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: 900;
  color: #4b5563;
  transition: all 0.2s;
}

.style-chip.selected {
  background-color: #111827;
  color: #fff;
  transform: scale(1.05);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

.source-info {
  width: 100%;
  background-color: #fff7ed;
  border: 1px solid #ffedd5;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-top: 20rpx;
}

.source-title {
  font-size: 22rpx;
  font-weight: 900;
  color: #ea580c;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  gap: 16rpx;
}

.tag {
  background-color: #fff;
  color: #c2410c;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 1px solid rgba(255,237,213, 0.5);
}

.bg-upload-section {
  width: 100%;
  margin-top: 30rpx;
}

.section-label {
  display: block;
  font-size: 24rpx;
  font-weight: 900;
  color: #111827;
  margin-bottom: 16rpx;
}

.upload-bg-box {
  height: 120rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  font-size: 24rpx;
}

.bg-preview {
  position: relative;
  height: 120rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.bg-preview image {
  width: 100%;
  height: 100%;
}

.remove-bg-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: rgba(0,0,0,0.5);
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.input-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.input-header {
  display: flex;
  justify-content: space-between;
}

.input-label {
  font-size: 24rpx;
  font-weight: 900;
  color: #111827;
}

.char-count {
  font-size: 22rpx;
  color: #9ca3af;
}

.char-count.warn {
  color: #ef4444;
}

.prompt-input {
  width: 100%;
  height: 180rpx;
  background-color: #f9fafb;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: rgba(255,255,255,0.9);
  backdrop-filter: blur(4px);
  border-top: 1px solid #f3f4f6;
}

.generate-btn {
  background-color: #111827;
  color: #fff;
  border-radius: 100rpx;
  font-weight: 900;
  font-size: 30rpx;
  padding: 24rpx 0;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.2);
}

.generate-btn[disabled] {
  background-color: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

/* Result Actions Panel */
.result-actions-panel {
  background-color: #fff;
  padding: 40rpx 40rpx 50rpx; /* safe bottom */
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -8rpx 30rpx rgba(0,0,0,0.05);
  margin-top: -40rpx;
  z-index: 20;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #1f2937;
}

.result-tip {
  font-size: 22rpx;
  color: #9ca3af;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.reset-btn {
  flex: 1;
  background-color: #f3f4f6;
  color: #4b5563;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 24rpx;
}

.download-btn {
  flex: 2;
  background-color: #fbbf24;
  color: #1f2937;
  font-size: 29rpx;
  font-weight: 800;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 20rpx rgba(251, 191, 36, 0.3);
}

/* Placeholder Panel */
.placeholder-panel {
  flex: 1;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin-top: -40rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-content {
  display: flex;
  flex-direction: column;
  items-align: center;
  color: #dae0e8;
  font-size: 24rpx;
}

.sparkle-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
