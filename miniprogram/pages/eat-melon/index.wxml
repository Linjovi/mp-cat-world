<view class="container">
  <!-- Sticky Header -->
  <view class="header sticky">
    <view class="nav-bar">
      <image class="nav-avatar" src="https://robohash.org/TravellerCatGuide.png?set=set4&bgset=bg1" mode="aspectFill"></image>
      <view>
        <view class="nav-title">吃瓜喵</view>
        <view class="nav-subtitle">全网热瓜，一网打尽！</view>
      </view>
    </view>

    <!-- Tabs -->
    <view class="tabs">
      <view class="tab-btn {{source === 'weibo' ? 'active weibo' : ''}}" bindtap="changeSource" data-source="weibo">
        <text>🔴 微博</text>
      </view>
      <view class="tab-btn {{source === 'douyin' ? 'active douyin' : ''}}" bindtap="changeSource" data-source="douyin">
        <text>🎵 抖音</text>
      </view>
      <view class="tab-btn {{source === 'xiaohongshu' ? 'active xhs' : ''}}" bindtap="changeSource" data-source="xiaohongshu">
        <text>📕 小红书</text>
      </view>
    </view>
  </view>

  <!-- Content Components -->
  <hot-list-weibo 
    id="weibo" 
    wx:if="{{source === 'weibo'}}" 
    active="{{source === 'weibo'}}"
  />
  
  <hot-list-douyin 
    id="douyin" 
    wx:if="{{source === 'douyin'}}" 
    active="{{source === 'douyin'}}"
  />
  
  <hot-list-rednote 
    id="xiaohongshu" 
    wx:if="{{source === 'xiaohongshu'}}" 
    active="{{source === 'xiaohongshu'}}"
  />
</view>
